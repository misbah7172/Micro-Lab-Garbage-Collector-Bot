# Micro Lab Garbage Collector - Autonomous Robot Configuration
# Edit these values to tune robot behavior without modifying code

# AI Model Configuration
MODEL_PATH=best.pt
MODEL_INPUT_SIZE=480
MODEL_CONFIDENCE_THRESHOLD=0.5

# Camera Configuration  
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Serial Communication
SERIAL_PORT=AUTO
SERIAL_BAUD_RATE=115200
SERIAL_TIMEOUT=1.0

# Navigation Parameters
OBSTACLE_DISTANCE=20.0          # Minimum distance to obstacles (cm)
OBJECT_APPROACH_DISTANCE=15.0   # Distance to stop when approaching object (cm)
MOVEMENT_DURATION=2.0           # Time to move in each direction during search (seconds)
DETECTION_THRESHOLD=50          # Pixels from center to consider object "centered"

# Motor Speeds (0-255)
MOTOR_SPEED_NORMAL=150
MOTOR_SPEED_SLOW=100
MOTOR_SPEED_FAST=200

# Search Behavior
SEARCH_ROTATIONS=2              # Number of 360° rotations at each search point
ROTATION_TIME=8.0               # Time for complete 360° rotation (seconds)

# Arm Timing (seconds)
ARM_APPROACH_TIME=1.0
ARM_GRAB_OPEN_TIME=2.0
ARM_GRAB_CLOSE_TIME=3.0
ARM_LIFT_TIME=4.0
ARM_CLASSIFY_TIME=1.0
ARM_DEPOSIT_TIME=2.0
ARM_RELEASE_TIME=3.0

# Classification
METAL_CLASS_IDS=0,1,2           # YOLO class IDs for metal objects (comma-separated)
CONFIDENCE_THRESHOLD=0.6        # Minimum confidence for object classification

# Safety Settings
MAX_SEARCH_POSITIONS=10         # Maximum search positions before returning to start
EMERGENCY_STOP_DISTANCE=5.0     # Emergency stop distance for front sensor (cm)
HEARTBEAT_INTERVAL=5.0          # Send heartbeat signal every N seconds

# Debug Settings
VERBOSE_OUTPUT=True
SHOW_CAMERA_FEED=True
SHOW_SENSOR_DATA=True
LOG_STATE_TRANSITIONS=True

# Performance Settings
CONTROL_LOOP_FREQUENCY=10       # Hz - Main control loop frequency
VISION_LOOP_FREQUENCY=30        # Hz - Camera processing frequency
SENSOR_READ_FREQUENCY=2         # Hz - Sensor reading frequency