# MICRO LAB GARBAGE COLLECTOR - ENVIRONMENT CONFIGURATION

# AI Model Configuration
MODEL_PATH=best.pt
MODEL_INPUT_SIZE=480
MODEL_CONFIDENCE_THRESHOLD=0.5
BOTTLE_CLASS_ID=39

# Camera Configuration
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30
JPEG_QUALITY=85

# Serial Communication Configuration
SERIAL_PORT=AUTO
SERIAL_BAUD_RATE=115200
SERIAL_TIMEOUT=1.0
AUTO_DETECT_PORTS=CH340,CP210,USB

# Web Server Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=False
SECRET_KEY=micro_lab_garbage_collector_2025

# System Performance
TARGET_FPS=30
FRAME_PROCESSING_DELAY=0.033
SERIAL_READ_DELAY=0.1

# Robot Commands
COMMAND_FORWARD=F
COMMAND_ROTATE=R
COMMAND_STOP=S
COMMAND_COLLECT=C
COMMAND_HEARTBEAT=H

# Default Sensor Values (when ESP32 not connected)
DEFAULT_TEMPERATURE=24.5
DEFAULT_HUMIDITY=60.0
DEFAULT_SMOKE_LEVEL=150
DEFAULT_DISTANCE=45

# Detection Thresholds
MAX_DETECTIONS_PER_FRAME=10
DETECTION_COOLDOWN=0.5
COLLECTION_TIMEOUT=30

# File Paths (relative to project root)
TEMPLATES_DIR=templates
STATIC_DIR=static
LOGS_DIR=logs

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=garbage_collector.log
ENABLE_SERIAL_LOGGING=True
ENABLE_DETECTION_LOGGING=True

# Dashboard Configuration
DASHBOARD_TITLE=Micro Lab Garbage Collector
DASHBOARD_SUBTITLE=AI-Powered Autonomous Cleaning System - Live Dashboard
DASHBOARD_REFRESH_RATE=100

# Advanced Settings
ENABLE_GPU_ACCELERATION=True
MEMORY_LIMIT_MB=2048
MAX_CONCURRENT_CONNECTIONS=10
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# Development/Debug Settings
MOCK_ESP32=False
MOCK_CAMERA=False
VERBOSE_OUTPUT=True
SAVE_DETECTION_IMAGES=False
DETECTION_SAVE_DIR=detections

# Model Alternatives (uncomment to use different models)
# MODEL_PATH=yolov8n.pt
# MODEL_PATH=yolov8s.pt
# MODEL_PATH=yolov8m.pt
# MODEL_PATH=yolov8l.pt
# MODEL_PATH=yolov8x.pt

# Custom Model Paths (examples for different scenarios)
# MODEL_PATH=models/custom_garbage_model.pt
# MODEL_PATH=models/indoor_detection.pt
# MODEL_PATH=models/outdoor_detection.pt
# MODEL_PATH=../models/experimental_model.pt

